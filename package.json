{
  "name": "logistic-control-simulation",
  "version": "1.0.0",
  "description": "Microservices-based Logistics Control Simulation System",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:driver": "cd driver-api && npm run start:dev",
    "start:planner": "cd planner-api && npm run start:dev",
    "start:tracking": "cd tracking-service && npm run start:dev",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "logistics",
    "microservices",
    "nestjs",
    "docker",
    "kubernetes"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.17",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@mapbox/polyline": "^1.1.1",
    "@turf/turf": "^6.5.0",
    "h3-js": "^4.1.0",
    "ioredis": "^5.3.2",
    "amqplib": "^0.10.3",
    "pg": "^8.11.3",
    "prom-client": "^14.2.0"
  }
}